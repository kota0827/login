<h1>Tweets</h1>
 <p><%= notice %></p>
  <div class ='row'>
    <% @blogs.each do |blog| %>
       <div class="col-xs-12 col-sm-12 col-md-6">
        <%= blog.content %>
         <span class="label label-info"><%= link_to '詳しく見る', blog_path(blog.id) %></span>
         <span class="label label-success"><%= link_to "やり直す", edit_blog_path(blog.id) %></span>
         <span class="label label-danger"><%= link_to '削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></span>
       </div>
    <% end %>
  </div>